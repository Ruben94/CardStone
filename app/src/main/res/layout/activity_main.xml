<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C6995F"
    tools:context="com.ruben.cardstone.MainActivity">


    <ImageView
        android:id="@+id/activity_main__card_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/activity_main__remaining_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#a4eed1a5"
        android:text="Remaining Cards: "
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#4d0401"
        android:gravity="center"/>

</RelativeLayout>
